@model IEnumerable<UserViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="mt-4">
	<form method="post" asp-action="Index" class="row">

		<div class="col-10">
			<input style="border:groove" class="form-control" type="text" placeholder="User's Email" name="email" />
		</div>

		<div class="col-2">
			<input type="submit" value="Search" class=" btn btn-secondary" />
		</div>

	</form>
</div>
@if (Model.Any())
{
	<h1 class="mt-3">All Users</h1>
	<table class="table table-striped table-hover mt-3">
		<thead>
		<th>@Html.DisplayNameFor(p => p.Id)</th>
		<th>@Html.DisplayNameFor(p => p.FirstName)</th>
		<th>@Html.DisplayNameFor(p => p.LastName)</th>
		<th>@Html.DisplayNameFor(p => p.Email)</th>
		@* <th>@Html.DisplayNameFor(p => p.PhoneNumber)</th> *@
		<th>@Html.DisplayNameFor(p => p.Roles)</th>
		

		<th>Details</th>
		<th>Update</th>
		<th>Delete</th>
		</thead>
		<tbody>
			@foreach (var i in Model)
			{
				<tr>
					@* <td><img src="~/Files/Images/@i.Imagename" width="80" height="90" alt="Employee's Image" class="rounded" /></td> *@
					<td>@Html.DisplayFor(I => i.Id)</td>
					<td>@Html.DisplayFor(I => i.FirstName)</td>
					<td>@Html.DisplayFor(I => i.LastName)</td>
					<td>@Html.DisplayFor(I => i.Email)</td>
					@* <td>@Html.DisplayFor(I => i.PhoneNumber)</td> *@
					<td>@string.Join(",",i.Roles)</td>

					<partial name="_ButtonsPartialView" model="@i.Id.ToString()"></partial>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="mt-3 alert-warning">
		<h1>No User</h1>
	</div>
}
