@model EmployeeViewModel
@{
	var departments = new SelectList(ViewBag.Departments, "Id", "Name");
}


<div class="form-group mb-3">
	<label class="col-form-label">Name</label>
	<input class="form-control" asp-for="Name">
	<span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group mb-3">
	<label class="form-label">Image</label><br />
	<input  asp-for="Image">
</div>

<div class="form-group mb-3">
	<label class="form-label">Age</label>
	<input class="form-control" asp-for="Age">
	<span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group mb-3">
	<label class="form-label">Address</label>
	<input class="form-control" asp-for="Address">
	<span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group mb-3">
	<label class="form-label">Salary</label>
	<input class="form-control" asp-for="Salary">
	<span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group mb-3">
	<label asp-for="Department"></label>
	<select class="form-control" asp-items="@departments" asp-for="DepartmentId">
		<option style="text-align:center" value="@null">---------------------Department-----------------------</option>
	</select>
</div>

<div class="form-group mb-3">
	<label class="form-label">Email</label>
	<input class="form-control" asp-for="Email">
	<span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group mb-3">
	<label class="form-label">Phone</label>
	<input class="form-control" asp-for="Phone">
	<span asp-validation-for="Phone" class="text-danger"></span>
</div>

<div class="form-group mb-3">
	<label class="form-label">Hireing Date</label>
	<input class="form-control" asp-for="HireDate">
	<span asp-validation-for="HireDate" class="text-danger"></span>
</div>

<div class="form-group mb-3">
	<label class="form-label">Is Active</label>
	<input class="form-control" asp-for="IsActive">
</div>
