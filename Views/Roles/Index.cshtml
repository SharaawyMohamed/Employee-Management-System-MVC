@model IEnumerable<RoleViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";

}
<a asp-action="Create" class="btn btn-success mt-3">Create New Role</a>
<div class="departm alert-success">
	<h1 class="m-3">@ViewBag.Message</h1>
</div> 

<div class="mt-3">
	<form method="post" asp-action="index" class="row">

		<div class="col-10">
			<input style="border:groove" class="form-control" type="text" placeholder="Role's Name" name="searchvalue" />
		</div>

		<div class="col-2">
			<input type="submit" value="Search" class=" btn btn-secondary" />
		</div>

	</form>
</div>

@if (Model.Any())
{
	<h1 class="mt-3">All Roles</h1>
	<table class="table table-striped table-hover mt-3">
		<thead>
		<th>@Html.DisplayNameFor(p => p.Id)</th>
		<th>@Html.DisplayNameFor(p => p.Name)</th>

		<th>Details</th>
		<th>Update</th>
		<th>Delete</th>
		</thead>
		<tbody>
			@foreach (var i in Model)
			{
				<tr>
					<td>@Html.DisplayFor(I => i.Id)</td>
					<td>@Html.DisplayFor(I => i.Name)</td>

					<partial name="_ButtonsPartialView" model="@i.Id"></partial>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="mt-3 alert-warning">
		<h1>No Roles</h1>
	</div>
}
