@model List<UsersInRoleViewModel>
@{
	ViewData["Title"] = "AddOrRemoveUser";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
	<form asp-action="AddOrRemoveUser" method="post" asp-route-roleId="@ViewBag.RoleId">

		<div class="dropup-center dropup mt-3">
			<h1>Users In Roles</h1><br />
		</div>

		<table class="table table-striped table-hover mt-3">
			<thead>
				<tr>
					<th>Is In Role</th>
					<th> Role Name</th>
				</tr>
			</thead>

			<tbody>
				@for(int i=0;i< Model.Count;i++)
				{
					<tr>
						<td><input asp-for="@Model[i].IsInRole" /></td>
						<td><label asp-for="@Model[i].IsInRole">@Model[i].Name</label></td>
					</tr>
					<input type="hidden" asp-for="@Model[i].Id"/>
					<input type="hidden" asp-for="@Model[i].Name"/>
				}
			</tbody>
		</table>

		<input type="submit" value="Save Changes" class="btn btn-info" />
		<a asp-action="Edit"  class="btn btn-info">Cancel</a>
	</form>

}
