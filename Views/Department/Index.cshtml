@model IEnumerable<DepartmentViewModel> //retirm type from index function
@{
	// view data would be sent to _layout view
	ViewData["Title"] = "Index";
}
@if (TempData["Message"] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		@TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="mt-3">
	<a asp-action="Create" class="btn btn-success">Creat New Department</a>
</div>

@if (Model.Count() > 0)
{
	<div class="dropup-center dropup mt-3">
		<h1>All Departments</h1><br />
	</div>
	<table class="table table-striped table-hover mt-3">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(c => c.Code)</th>
				<th>@Html.DisplayNameFor(n => n.Name)</th>
				<th>@Html.DisplayNameFor(dfc => dfc.DateOfCreation)</th>

				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var department in Model)
			{
				<tr>
					<td>@Html.DisplayFor(c=> department.Code)</td>
					<td>@Html.DisplayFor(n=>department.Name)</td>
					<td>@Html.DisplayFor(doc=>department.DateOfCreation)</td>

					<partial name="_ButtonsPartialView" model="@department.Id.ToString()" />

				</tr>
			}
		</tbody>
		<tfoot>
		</tfoot>
	</table>
}
else
{
	<div class="mt-5 alert alert-warning">
		<h1>No Departments</h1>
	</div>
}

