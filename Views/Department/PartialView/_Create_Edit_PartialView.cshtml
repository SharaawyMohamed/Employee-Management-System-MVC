    <label class="col-form-label">Code</label>@* @Html.DisplayFor(c => c.Code) *@
    <input class="form-control" asp-for="Code">
    <span asp-validation-for="Code" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label class="form-label">Name</label>
    <input class="form-control" asp-for="Name">
    <span asp-validation-for="Name" class="text-danger"></span>

</div>
<div class="form-group mb-3">
    <label class="form-label">Date Of Creation</label>
    <input class="form-control" asp-for="DateOfCreation">@* asp-for="x" --> alternative of (name) and (type)*@
    <span asp-validation-for="DateOfCreation" class="text-danger"></span>

</div>
