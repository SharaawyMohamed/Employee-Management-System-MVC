@model LoginViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" Method="post">

			<input class="text" asp-for="Email" placeholder="Email Address" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />


			<input class="text" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="Remember" class="checkbox">
					<span>Keep Me Signed In</span><br />
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
			<p>Don't have an Account? <a asp-action="Register">Register!</a></p>
			<p><a asp-action="ForgetPassword">Forget Password!</a></p>
		</form>
		<p style="text-align:center"><a asp-action="LoginWithGoogle">Login With Google</a></p>
	</div>

</div>
@section validation {
	<partial name="_ValidationScriptsPartial"></partial>

}